{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "title",
    "paragraphs",
    "conclusion"
  ],
  "properties": {
    "title": {
      "type": "string",
      "minLength": 1
    },
    "paragraphs": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "string",
        "minLength": 1
      }
    },
    "conclusion": {
      "type": "string",
      "minLength": 1
    }
  }
}